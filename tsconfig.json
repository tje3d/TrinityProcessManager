{
    "compilerOptions": {
        "target": "ES5",
        "module": "commonjs",
        "outDir": "./dist",
        "strict": true,
        "noImplicitAny": false,
        "moduleResolution": "node",
        "baseUrl": "./",
        "paths": {
            "@src/*": ["src/*"],
        },
        "esModuleInterop": true,
        "skipLibCheck": true,
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules"],
}